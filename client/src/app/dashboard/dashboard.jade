.container(style="padding-top: 20px;")
  h3 {{user.lastName}}'s Dashboard

.row
  .medium-7.large-8.columns.panel.left
    h4 District {{user.District}} Information
    div
      h5 House Representative
        ul.no-bullet
          li
            a(ng-bind="houseRep | congressmanNameFilter", ui-sref="congressman({id: houseRep.bioguide_id})")

      div
        h5 Senators 
          ul.no-bullet(ng-repeat="senator in senators")
            li
              a(ng-bind="senator | congressmanNameFilter", ui-sref="congressman({id: senator.bioguide_id})")
  
  .medium-1.large-1.columns
  .medium-4.large-3.columns.panel.right
    h4 Favorite Bills
    ul.no-bullet
      li(style="border-bottom: 1px solid #808080;")
        div
          a.left CISPA hr234-113
          a(href="#").right
            i.fa.fa-star
      li(style="border-bottom: 1px solid #808080;")
        div
          a.left Gun Control hr1134-113
          a(href="#").right
            i.fa.fa-star
