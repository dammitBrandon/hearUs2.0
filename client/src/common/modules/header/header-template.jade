div(ng-controller="HeaderCtrl")
  top-bar
    ul.title-area
      li.name
        h2
          a(ui-sref="landingPage") The Hear Us Project
      li(toggle-top-bar)
        a
          i.fa.fa-bars
          
    top-bar-section
      ul.right
        li
          a(ui-sref="dashboard") Dashboard
        li
          a.button(ng-if="!isLoggedIn()", ui-sref="auth.sign_in") Sign in
          a.button.alert(ng-if="isLoggedIn()", dropdown-toggle="#logoutDropdown") {{user.email}} 
      div#logoutDropdown.f-dropdown.content.open
        ul.button-group.stack-for-small
          li
            button.button(type="button") Profile
          li(ng-controller="authCtrl")
            button.button.alert(type="button", ng-click="logOut()") Log out
